<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <!-- Listing Title -->
  <div class="col-12 col-md-8 offset-md-2 text-center">
    <h3><%= listing.title %></h3>
  </div>

  <!-- Listing Card -->
  <div class="card col-12 col-md-8 offset-md-2 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img img-fluid"
      alt="listing-image"
    />
    <div class="card-body">
      <p class="card-text">
        <i>Owned by <%= listing.owner.username %></i><br />
        <%= listing.description %><br />
        â‚¹<%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %><br />
        <i>Category: <%= listing.category %></i>
      </p>
    </div>
  </div>

  <!-- Edit/Delete Buttons (Visible to Owner) -->
  <% if (currUser && listing.owner._id.toString() === currUser._id.toString()) {
  %>
  <div
    class="btns col-12 col-md-8 offset-md-2 d-flex flex-column flex-md-row justify-content-md-between mt-3"
  >
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark mb-2 mb-md-0 add-btn"
    >
      Edit
    </a>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- Reviews Section -->
  <div class="col-12 col-md-8 offset-md-2 mt-3">
    <hr />

    <!-- Leave a Review Form (Visible to Logged-In Users) -->
    <% if (currUser) { %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[Comment]"
          id="comment"
          class="form-control"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please submit some comments</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>

    <!-- All Reviews -->
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (let review of listing.reviews) { %>
      <div class="card col-12 col-sm-6 col-md-5 mb-3">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="card-text"><%= review.Comment %></p>
          <p class="starability-result" data-rating="<%= review.rating %>"></p>
        </div>
        <% if (currUser && review.author._id.toString() ===
        currUser._id.toString()) { %>
        <form
          class="mb-3"
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>

<style>
  /* Custom styles for responsiveness */
  .show-img {
    object-fit: cover;
    max-height: 400px;
    border-radius: 5%;
  }

  .listing-card {
    margin-bottom: 20px;
  }

  .btns {
    gap: 10px;
  }

  /* Remove side spacing in mobile view */
  @media (max-width: 576px) {
    .col-12 {
      padding-left: 0 !important;
      padding-right: 0 !important;
    }

    .card {
      border-radius: 0; /* Optional: Remove card border radius for edge-to-edge look */
      margin-left: 0;
      margin-right: 0;
    }

    .show-img {
      max-height: 300px;
      border-radius: 5%;
    }

    .card-body {
      padding: 1rem; /* Keep some internal padding for content */
    }

    .btns {
      flex-direction: column !important;
      align-items: center;
      padding: 0;
    }

    .btn {
      width: 100%;
      max-width: 200px;
    }

    .card-text {
      font-size: 0.9rem;
    }

    .starability-basic label {
      font-size: 0.8rem;
    }

    .row {
      margin-left: 0;
      margin-right: 0;
    }
  }

  @media (min-width: 577px) and (max-width: 767px) {
    .show-img {
      max-height: 250px;
      border-radius: 5%;
    }
  }
</style>
